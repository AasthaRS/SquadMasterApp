<UserControl x:Class="SquadMaster.WPFApp.Views.ParticipantDataLoaderWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SquadMaster.WPFApp.Views"
             mc:Ignorable="d" Background="LightYellow"
             d:DesignHeight="200" d:DesignWidth="600">
    <Grid VerticalAlignment="Center">
        <!-- Label to instruct the user -->
        <Label Content="Enter the number of teams:" Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,10,0,0" />

        <!-- TextBox to get the number of teams -->
        <TextBox Name="NumberOfTeamsTextBox" Width="200" Foreground="Gray" HorizontalContentAlignment="Right" Margin="10,40,10,0" VerticalAlignment="Top" PreviewTextInput="NumberOfTeamsTextBox_PreviewTextInput"/>

        <!-- Upload JSON button -->
        <Button Name="uploadJsonBtn" Foreground="Gray" Background="#e9ecef" Content="Upload JSON" Width="100" Margin="10,80,10,0" VerticalAlignment="Top" Click="uploadJsonBtn_Click"/>

        <!-- Display Participants button -->
        <Button Name="displayParticipantsBtn" Foreground="Gray" Background="#e9ecef" Content="Display Participants" Width="150" Margin="10,130,10,0" VerticalAlignment="Top" Click="displayParticipantsBtn_Click"/>

        <!-- Calculate button --><!--
        <Button Name="generateTeamsBtn" Content="Generate Teams" Width="100" Margin="10,180,10,0" VerticalAlignment="Top" IsEnabled="False" Click="generateTeamsBtn_Click"/>-->
    </Grid>
</UserControl>
